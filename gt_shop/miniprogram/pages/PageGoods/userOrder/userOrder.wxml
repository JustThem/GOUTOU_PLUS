<!--miniprogram/pages/PageGoods/userOrder/userOrder.wxml-->
<view>
	<view class="order-title">
		<block wx:for='{{orderTile}}' wx:key='*this'>
			<view bindtap="onSelectedTextIndex" data-state="{{item.state}}">
				<text class="{{state === item.state ?'order-title-selected-text' :'order-title-text'}}">{{item.name}}</text>
			</view>
		</block>
	</view>

	<!-- 下面是订单 -->
	<view class="all-order">
		<block wx:for='{{2}}' wx:key='index'>
			<view hover-class="theme-hover" bindtap="gotoDetail" class="item-order theme-fff">
        <view class="order-number">
          <view class="theme-price">订单号：GT023481246</view>
          <view class="theme-font-f">待付款</view>
        </view>
				<view class="goods">
					<image mode="aspectFill" src="https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=1709644436,2739756540&fm=26&gp=0.jpg"></image>
					<view class="goods-info">
						<view>
							<text class="theme-price">超级好看的风景超级好看的风景超级好看的风景</text>
							<text class="theme-font-f">￥120</text>
						</view>
						<view class="theme-font-f">x 10</view>
						<view class="theme-price">规格</view>
					</view>
				</view>
			</view>
		</block>
	</view>

</view>